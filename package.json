{
  "name": "hodlwatch",
  "homepage": "https://hodl.watch",
  "version": "0.1.0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test --env=jsdom",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "predeploy": "npm run build",
    "build-css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "prebuild": "cp webpack.config.prod.js node_modules/react-scripts/config"
  },
  "lint-staged": {
    "*.{js,json,css,scss}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "bloomer": "^0.6.3",
    "bulma": "^0.6.1",
    "ccxt": "^1.10.508",
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-plugin-lodash": "^3.3.2",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest-cli": "^21.2.1",
    "lint-staged": "^4.3.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react-scripts": "1.0.17",
    "uglifyjs-webpack-plugin": "^1.1.5"
  }
}
