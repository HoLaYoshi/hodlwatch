{
  "name": "hodlwatch",
  "homepage": "https://hodl.watch",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/belaczek/hodlwatch.git"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "next src",
    "build": "next build src",
    "export": "next build src && next export src",
    "deploy": "gh-pages -d src/out",
    "test": "react-scripts test --env=jsdom",
    "test-coverage": "npm test -- --coverage",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "format:single": "prettier-eslint --write",
    "predeploy": "npm run export",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run format:single --",
      "eslint --max-warnings=0",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "big.js": "^5.0.3",
    "bloomer": "^0.6.3",
    "bulma": "^0.6.2",
    "bulma-switch": "^1.0.2",
    "ccxt": "^1.14.163",
    "classnames": "^2.2.6",
    "color-hash": "^1.0.3",
    "crypto-js": "^3.1.9-1",
    "date-fns": "^1.29.0",
    "lodash": "^4.17.10",
    "next": "^6.0.3",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react-toastify": "^3.4.3",
    "recharts": "^1.0.0-beta.10",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@zeit/next-sass": "^0.2.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-plugin-standard": "^3.1.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1"
  }
